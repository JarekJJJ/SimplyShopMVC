@model SimplyShopMVC.Application.ViewModels.Front.IndexListVm
@{
    ViewData["Title"] = "HKR24.pl - Index site";
}
<div class="container row">
    <div id="carouselExampleInterval m-1" class="carousel slide mt-2 col-md-12 d-none d-md-block" data-bs-ride="carousel">
        <div class="carousel-inner" style="height:250px">
            <div class="carousel-item active" data-bs-interval="10000">
                <img src="/media/baner1.jpg" class="d-block w-100"  alt="...">
            </div>
            <div class="carousel-item" data-bs-interval="2000">
                <img src="/media/kasy.jpg" class="d-block w-100"  alt="...">
            </div>
            <div class="carousel-item">
                <img src="/media/baner1.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <div class="row me-1  ms-0">
    <div id="IndexPanel1" class="border border-1 border-dark-subtle rounded-3 mt-2">
        @if(Model.articlePanel1 != null)
        {
            <p class="">@(Html.Raw(Model.articlePanel1.Content))</p>
        }

    </div>
    <div id="IndexPanel2">
        @if (Model.articlePanel2 != null)
        {
            <p class="">@(Html.Raw(Model.articlePanel2.Content))</p>
        }
    </div>
        <div id="IndexPanel3">
            @if (Model.articlePanel3 != null)
            {
                <p class="">@(Html.Raw(Model.articlePanel3.Content))</p>
            }
        </div>
    </div>
    <div class="row m-2 ">
        <div class="col-12 border-top border-4 border-info position-relative">
            <span class="badge position-absolute top-0 start-0  translate-middle-y ms-2 text-info bg-white fs-4">News</span>
        </div>
        <div class="mt-3 row">
        <vc:box-article number="3" tag-name="" />
        </div>
    </div>
    <div class="row m-2 "> 
        <div class="col-12 border-top border-4 border-success-subtle position-relative">
            <span class="badge position-absolute top-0 start-0  translate-middle-y ms-2 text-success bg-white fs-4">Nowe produkty</span>
        </div>
        <div class="mt-3 row">
        <vc:box-new-items number="8" />
        </div>
    </div>

    <div class="row m-1 ">
      
    </div>
</div>
