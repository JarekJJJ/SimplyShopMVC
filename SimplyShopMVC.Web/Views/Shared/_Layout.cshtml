<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SimplyShopMVC.Web</title>
    <!-- <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SimplyShopMVC.Web.styles.css" asp-append-version="true" />

</head>
<body>
    <header class="border-bottom lh-1 py-3">
        <div class="container">

            <div class="row flex-nowrap justify-content-between align-items-center">
                <div class="col-4 pt-1">
                    <!--<a class="link-secondary" href="#">Subscribe</a> -->
                </div>
                <div class="col-4 text-center">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/media/primehkr24.png" height="64" width="200" alt="hkr24.pl - logo" /></a>
                </div>
                <div class="col-4 d-flex justify-content-end">
                    <a class="link-secondary" href="#" aria-label="Search">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="mx-3" role="img" viewBox="0 0 24 24"><title>Search</title><circle cx="10.5" cy="10.5" r="7.5" /><path d="M21 21l-5.2-5.2" /></svg>
                    </a>
                </div>
            </div>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 bg-body-tertiary rounded">


                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">

                    <ul class="navbar-nav col-lg-8 flex-grow-1 fs-5 fw-semibold">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>                     
                            <a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="index">Sklep</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Article" asp-action="index">Informacje</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Article" asp-action="index">Oferta</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Article" asp-action="index">Serwis</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark dropdown-toggle" role="button" href="#" data-bs-toggle="dropdown" aria-expanded="false">Panel Administracyjny</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Shop" asp-action="AddItem">Dodaj Towar</a></li>
                                    <li><a class="dropdown-item" asp-controller="Shop" asp-action="ListItemWarehouse">Przyjęcie magazynowe</a></li>
                                    <li><a class="dropdown-item" asp-controller="Shop" asp-action="AdminListItem">Lista towarów</a></li>
                                    <li><a class="dropdown-item" asp-controller="Article" asp-action="AddArticle">Dodaj informację</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="#">Something else here</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - SimplyShopMVC.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/tinymce/tinymce.js"></script>
    <script>
        tinymce.init({
            selector: '#mytextarea',
            plugins: 'image code lists',
            toolbar: 'image code numlist bullist'
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
