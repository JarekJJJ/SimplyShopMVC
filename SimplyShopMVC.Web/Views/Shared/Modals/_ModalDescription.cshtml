@model ModalParams

<div class="modal fade" id="@Model.Id">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">                     
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="col-md-12 p-2">
                 <div class="col-md-12">
                    <h4 class="modal-title">@Model.Title</h4>
                </div>
                <div class="col-md-12">
                     @if (Model.itemId>0)
                {

                        <button class="btn btn-outline-info" type="button"><span class="">@Html.ActionLink("Szczegóły", "DetailItem","Item", new {selectedItem=Model.itemId}, new{@class="link-offset-2 link-underline link-underline-opacity-0"})</span></button>
                }
                </div>       

            </div>
            <div class="modal-body">
                @Html.Raw(Model.Description)
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>

</div>
