@model SimplyShopMVC.Application.ViewModels.Article.ListArticleForListVm

@{
    ViewData["Title"] = "Informacje";
}

<h1>Informacje</h1>
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="AddArticle">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Tytuł
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Articles)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.ActionLink("UpdateArticle", "UpdateArticle", new {id=item.Id}) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.Id})
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<div class="container">


    <div class="row mb-2">
        @{
            foreach (var item in Model.Articles)
            {
                string thumbImage = item.imagePath.FirstOrDefault();


                <div class="col-md-6">
                    <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative  article-list">
                        <div class="col-8 p-4 d-flex flex-column">
                            <strong class="d-inline-block mb-2 text-primary-emphasis">Kategoria: </strong>
                            <h3 class="mb-0">@(item.Title)</h3>
                            <p class="card-text mb-auto mt-2 text-container">@(item.ShortDescription)</p>
                            <a href="/Article/ArticleDetail/@item.Id" class="icon-link gap-1 icon-link-hover stretched-link">Więcej</a>
                            <small class="text-body-secondary mt-2">Utworzony:  @(item.Created.ToShortDateString()) Ostatnia modyfikacja:  </small>
                        </div>
                        <div class="col-4 d-none d-lg-block">
                            <img src="~/media/articleimg/@(item.Id)/@thumbImage" class="bd-placeholder-img me-2 position-relative top-50 start-50 translate-middle" width="200" height="auto" role="img" alt="..." aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%" fill="#eceeef" dy=".3em"></text>
                        </div>
                    </div>
                </div>
            }
        }
    </div>



    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        @{
            foreach (var item in Model.Articles)
            {
                string thumbImage = item.imagePath.FirstOrDefault();


                <div class="col">
                    <div class="card shadow-sm" style="max-height:400px;">
                        <img src="~/media/articleimg/@(item.Id)/@thumbImage" class="img-fluid object-fit-scale border rounded" height="200" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.ShortDescription)</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary ">@Html.ActionLink("Więcej", "ArticleDetail", new {id=item.Id})</button>

                                </div>
                                <small class="text-body-secondary">Utworzony:  @(item.Created.ToShortDateString()) </small>
                            </div>
                        </div>
                    </div>
                </div>


            }
        }
    </div>
</div>