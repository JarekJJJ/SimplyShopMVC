@model SimplyShopMVC.Application.ViewModels.Article.ListArticleForListVm

@{
    ViewData["Title"] = "Article";
}


<h1>Article</h1>
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="AddArticle">Create New</a>
    </p>
}


<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Tytuł
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Articles)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.ActionLink("UpdateArticle", "UpdateArticle", new {id=item.Id}) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id})
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        @{
            foreach (var item in Model.Articles)
            {
                string thumbImage = item.imagePath.FirstOrDefault();


                <div class="col">
                    <div class="card shadow-sm" style="max-height:400px;">
                        <img src="~/media/articleimg/@(item.Id)/@thumbImage" class="img-fluid object-fit-scale border rounded" height="200" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.ShortDescription)</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary ">@Html.ActionLink("Więcej", "ArticleDetail", new {id=item.Id})</button>

                                </div>
                                <small class="text-body-secondary">Utworzony:  @(item.Created.ToShortDateString()) </small>
                            </div>
                        </div>
                    </div>
                </div>


            }
        }
    </div>
</div>