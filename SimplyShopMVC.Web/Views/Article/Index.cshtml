@model SimplyShopMVC.Application.ViewModels.Article.ListArticleForListVm

@{
    ViewData["Title"] = "Informacje";
}
<h1>Informacje</h1>
<div class="container">
    <div class="row mb-2 position-relative">
        @if (Model.Articles != null)
        {
            string thumbImage = "";
            @foreach (var item in Model.Articles)
            {
                thumbImage = item.imagePath.FirstOrDefault();
                <div class="col-md-3">
                    <div class="col-md-12 justify-content-center d-flex flex-column border rounded-3 border-1 border-dark-subtle mt-2">
                        <div class="text-center flex-fill m-1" style="background-color: rgba(255, 255, 255, 0.6);">
                            <span class="ps-1 pt-1 fs-5 fw-bold mt-1 text-black">@(item.Title)</span>
                        </div>
                        <div class="m-1 flex-fill flex-grow-1" style="background-image:url('/media/articleimg/@(item.Id)/@thumbImage'); background-size:cover;">
                            <div class="p-1 text-center flex-fill" style="background-color: rgba(255, 255, 255, 0.6);">
                                <p class="mb-auto mt-1">@(item.ShortDescription)</p>
                            </div>
                            <div class="p-1 text-center flex-fill" style="background-color: rgba(255, 255, 255, 0.6);">
                                <a href="/Article/ArticleDetail/@item.Id" class="icon-link gap-1 text-black fw-bold pb-2 icon-link-hover stretched-link">Więcej>></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }

    </div>
</div>